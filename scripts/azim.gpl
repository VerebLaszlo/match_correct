#!/usr/bin/gnuplot -persist
# initialise ======================================================================================
file="azim.".type
files=system("ls -1 *".file)

# mass ============================================================================================
set output "azim.eps"
set view 60,240
set xra[0.0:2.0*pi]; set xlabel "{/Symbol a}_1"
set yra[0.0:2.0*pi]; set ylabel "{/Symbol a}_2"

do for [index=1:words(files)] {
	set zlabel "{/URWChanceryL M}_{typ}" rotate by 0
	set dgrid3d 50,50; set table 'match.out'; sp word(files,index) u 1:2:4; unset table; input='match.out'
	sp input u 1:2:3 t getTitle(word(files,index)) w pm3d

	set zlabel "{/Symbol d}t" rotate by 0
	set dgrid3d 50,50; set table 'match.out'; sp word(files,index) u 1:2:6; unset table; input='match.out'
	sp input u 1:2:3 t getTitle(word(files,index)) w pm3d

	set zlabel "relatíve periódus eltérés" rotate by 90
	set dgrid3d 50,50; set table 'match.out'; sp word(files,index) u 1:2:7; unset table; input='match.out'
	sp input u 1:2:3 t getTitle(word(files,index)) w pm3d
}

#pause -1

